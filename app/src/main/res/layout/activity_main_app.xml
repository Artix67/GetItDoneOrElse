<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityApplication">

    <Button
        android:id="@+id/buttonKevin"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="88dp"
        android:text="Kevin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonArtix"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:text="Artix"
        app:layout_constraintEnd_toEndOf="@+id/buttonKevin"
        app:layout_constraintStart_toStartOf="@+id/buttonKevin"
        app:layout_constraintTop_toBottomOf="@+id/buttonKevin" />

    <Button
        android:id="@+id/buttonMiki"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:text="Miki"
        app:layout_constraintEnd_toEndOf="@+id/buttonArtix"
        app:layout_constraintStart_toStartOf="@+id/buttonArtix"
        app:layout_constraintTop_toBottomOf="@+id/buttonArtix" />

    <Button
        android:id="@+id/buttonNatalie"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:text="Natalie"
        app:layout_constraintEnd_toEndOf="@+id/buttonMiki"
        app:layout_constraintStart_toStartOf="@+id/buttonMiki"
        app:layout_constraintTop_toBottomOf="@+id/buttonMiki" />
</androidx.constraintlayout.widget.ConstraintLayout>