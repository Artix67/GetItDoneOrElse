<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdroplog"
    tools:context=".MainActivityApplication">

    <!-- Main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/buttonKevin"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/baseline_event_black_24dp"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:text="Calendar"
                android:textColor="#D81B60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <Button
                android:id="@+id/buttonArtix"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="550dp"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/baseline_menu_black_24dp"
                android:gravity="center"
                android:text="Menu"
                android:textColor="#D81B60"
                app:layout_constraintEnd_toEndOf="@+id/buttonNatalie"
                app:layout_constraintStart_toStartOf="@+id/buttonMiki"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonMiki"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/baseline_login_black_24dp"
                android:gravity="center"
                android:text="Login"
                android:textColor="#D81B60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonKevin" />

            <Button
                android:id="@+id/buttonNatalie"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="71dp"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/baseline_shuffle_black_24dp"
                android:gravity="center"
                android:text="Randomization"
                android:textColor="#D81B60"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonMiki"
                app:layout_constraintTop_toBottomOf="@+id/buttonSetting" />

            <Button
                android:id="@+id/buttonSetting"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="71dp"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/baseline_settings_black_24dp"
                android:gravity="center"
                android:text="Setting"
                android:textColor="#D81B60"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonKevin"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Get It Done or Else"
                android:fontFamily="@font/poppins_bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>




</androidx.drawerlayout.widget.DrawerLayout>
